{% extends '@cerseilabstemplatedir/Default/working-master.html.twig' %}

{% block styles %}
    {{ parent() }}
    <style>
        .task-holder {
            color: #333;
        }

        .task-status-1 {
            opacity: 0.3;
        }

        .task {
            box-shadow: inset 0 0 8px #C2D7DA;
            padding: 8px;
            margin-bottom: 15px;
            background: #EDFDFF;
            border-radius: 5px;
        }

        .task_title {
            margin: 0;
            padding: 0 1px 6px;
            font-size: 16px;
            font-weight: bold;
        }

        .task_description {
            font-size: 14px;
            line-height: 20px;
            padding: 5px;
            border: 1px solid #B6DFE8;
            box-shadow: 1px 1px 0px rgba(58, 156, 179, 0.63);
            border-radius: 5px;
            background: #fff;
        }

        .form-control {
            display: block;
            width: 100%;
            height: 34px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #252525;
            background-color: #F3F3F3;
            background-image: none;
            border: 1px solid #DEDEDE;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;

        }

        .form-control {
            border-radius: 1px;
            padding: 2px;
            line-height: 16px;
            height: auto;
            font-size: 13px;
        }

        #task_title {
            line-height: 25px;
        }

        .show-task-form {
            border-radius: 0;
            padding: 6px;
            font-size: 13px;
            background: none;
            color: #3A9CB3;
            border: none;
            position: absolute;
        }
        .task-form {
            display: none;
        }

        .form-group {
            margin: 0 0 5px;
        }

        #task_description {
            min-height: 200px;
        }

        .form-holder {
            position: relative;
            min-height: 30px;
            margin-bottom: 15px;
        }
    </style>
{% endblock %}

{% block thecontent %}

    <div class="row">
        <div class="col-md-6">
            {#<button type="button" class="btn btn-info show-task-form">+ Add New</button>#}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 form-holder">
            <button type="button" class="btn btn-info show-task-form">+ Add New</button>
            <form class="task-form" role="form">

                <div class="form-group">
                    <input id="task_title" class="form-control" placeholder="Your task name">
                </div>

                <div class="form-group">
                    <textarea id="task_description" placeholder="Describe your task" class="form-control"></textarea>
                </div>

                <div class="form-group text-right">
                    <button type="button" class="save_task btn btn-default">Save Task</button>
                </div>

            </form>

        </div>
    </div>

    <div class="row">
        <div class="col-md-6">

            <div class="task-holder">

                {#<div class="task">#}

                {#<h3 class="task_title"></h3>#}

                {#<div class="task_description">#}

                {#</div>#}

                {#</div>#}

            </div>
            <!--TASK HOLDER-->

        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset("company/js/task.js") }}"></script>
{% endblock %}